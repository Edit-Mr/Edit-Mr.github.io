        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body {
                background-color: #181c27;
                color: #ddd;
            }

            nav {
                background-color: #d8d8d83a;
                backdrop-filter: blur(10px);
                --webkit-backdrop-filter: blur(10px);
                position: fixed;
                top: 1rem;
                left: 50%;
                transform: translateX(-50%);
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 1rem;
                padding: 1rem 2rem;
                border-radius: 2000px;
                z-index: 1000;
            }

            nav a {
                text-decoration: none;
            }

            a {
                color: #ddd;
                font-weight: bold;
                transition: color 0.3s ease;
            }

            a:hover {
                color: #30a9de;
                text-decoration: underline;
            }

            header {
                height: 600px;
                display: flex;
                justify-content: center;
                align-items: center;
                background: url(https://raw.githubusercontent.com/Edit-Mr/2022-vtsh-graduation/main/group.webp) no-repeat center center;
                background-size: cover;
                backdrop-filter: opacity(0.5);
                position: relative;
            }

            header::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
            }

            header h1 {
                position: relative;
                z-index: 1;
                color: #fff;
                font-size: 2rem;
                text-align: center;
            }

            h1::after {
                content: "_";
                animation: blink 1s infinite;
            }
            @keyframes blink {
                0%,
                100% {
                    opacity: 1;
                }
                50% {
                    opacity: 0;
                }
            }

            main {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                gap: 1rem;
                padding: 2rem;
                max-width: 1200px;
                margin: 0 auto;
            }

            .student {
                background-color: #2f4154;
                border-radius: 10px;
                padding: 1rem;
                display: flex;
                align-items: center;
                gap: 1rem;
                transition: transform 0.3s ease;
            }
            .student:hover {
                transform: scale(1.05);
            }
            .student img {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                object-fit: cover;
                object-position: top;
                background-color: #44576f;
                color: transparent;
            }
            .student div {
                flex: 1;
            }
            .student h3 {
                margin-bottom: 0.5rem;
            }
            .student p {
                margin: 0.2rem 0;
            }

            @media (max-width: 600px) {
                header h1 {
                    font-size: 1.5rem;
                }
                nav {
                    flex-direction: column;
                    gap: 0.5rem;
                }
                main {
                    grid-template-columns: 1fr;
                }
            }
        </style>
    </head>
