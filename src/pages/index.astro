                "name": "Elvis Mao",
                "alternateName": ["毛宥鈞", "毛哥EM", "EM"],
                "description": "Elvis Mao (毛哥EM) is a full stack developer, and a digital creator from Taiwan.",
                "email": "info@elvismao.com",
                "contactPoint": {
                    "@type": "ContactPoint",
                    "email": "info@elvismao.com"
                },
                "foundingDate": "2021-06-04",
                "sameAs": ["https://www.instagram.com/emtech.cc/", "https://emtech.cc"],
                "mainEntity": {
                    "@context": "https://schema.org",
                    "@type": "Person",
                    "name": "Elvis Mao",
