{
    "extends": "astro/tsconfigs/base",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "checkJs": false,
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@assets/*": ["src/assets/*"],
            "@i18n": ["src/i18n/index.js"]
        }
    }
}
